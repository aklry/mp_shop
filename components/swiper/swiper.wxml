<view class="swiper">
  <swiper class="mySwiper" indicator-dots="{{ indicatorDots}}" autoplay="{{ autoplay }}" interval="{{ interval}}" duration="{{ duration }}" indicator-color="#fff" indicator-active-color="#fa2c19" circular="{{ circular }}">
    <block wx:for="{{ swiperData }}" wx:for-item="item" wx:key="index">
      <swiper-item>
        <image src="{{ item.url }}" mode="widthFix" />
      </swiper-item>
    </block>
  </swiper>
</view>